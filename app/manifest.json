{
	"manifest_version":1,
	"type":"WebApp",
	"meta":{
		"name":"Warface Sigs",
		"version":"1.0.0",
		"minimum-overwolf-version":"0.77.10",
		"author":"Bennet Gigliotti & Chad Kosie",
		"dock_button_title":"Warface Sigs",
		"icon":"IconMouseOver.png",
		"icon_gray":"IconMouseNormal.png",
		"description":"Create your own custom Warface Signature, complete with live updating game stats!"
	},
	"permissions": ["GameInfo"],
	"data": {
		"start_window":"IndexWindow",
		"windows":{
			"SigMakerWindow":{
					"file":"Files/sigMaker.html",
					"transparent":true,
					"resizable":false,
					"size":{"width":1450, "height":800},
					"in_game_only":false,
					"show_in_taskbar":true,
					"desktop_only":true
					},
				"IndexWindow":{
					"file":"Files/index.html",
					"transparent":true,
					"resizable":false,
					"size":{"width":2756, "height":275},
					"in_game_only":false,
					"show_in_taskbar":false,
					"start_position":{
						"top":100,
						"left":300
					}
					},
				"HelpWindow":{
				"file":"Files/help.html",
				"transparent":true,
				"resizable":false,
				"size":{"width":1100, "height":800},
				"in_game_only":false,
				"show_in_taskbar":false,
				"topmost":true
				}
				},

				"externally_connectable": {
        "matches": [
	    	"http://warfacesigs.me",
	    	"https://warfacesigs.me"
        	]
    	},

		"launch_events": [
    	{
        	"event": "GameLaunch",
        	"event_data": {
       	   		  "game_ids": [7784]
        },
        	"start_minimized": false
    	}]
	}
}